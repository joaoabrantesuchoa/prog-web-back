generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Professor
  Aluno
}

enum StatusAtividade {
  PENDENTE
  CONCLUIDA
}


model Usuario {
  id        Int        @id @default(autoincrement())
  nome      String     @db.VarChar(100)
  email     String     @unique @db.VarChar(100)
  password  String     @unique
  role      Role
  Professor Professor?
  Aluno     Aluno?
}

model Professor {
  id        Int       @id @default(autoincrement())
  projetos  Projeto[]
  usuario   Usuario   @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  usuarioId Int       @unique
}

model Aluno {
  id             Int              @id @default(autoincrement())
  registros      RegistroHora[]
  usuario        Usuario          @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  usuarioId      Int              @unique
  AtividadeAluno AtividadeAluno[]
}

model Projeto {
  id          Int            @id @default(autoincrement())
  titulo      String         @db.VarChar(200)
  descricao   String?
  professor   Professor      @relation(fields: [professorId], references: [id])
  professorId Int
  registros   RegistroHora[]
  Atividade   Atividade[]
}

model RegistroHora {
  id               Int      @id @default(autoincrement())
  aluno            Aluno    @relation(fields: [alunoId], references: [id])
  alunoId          Int
  projeto          Projeto  @relation(fields: [projetoId], references: [id], onDelete: Cascade)
  projetoId        Int
  horasTrabalhadas Int
  dataRegistro     DateTime @default(now())
}

model Atividade {
  id               Int              @id @default(autoincrement())
  titulo           String           @db.VarChar(200)
  descricao        String?
  horasNecessarias Int
  projeto          Projeto          @relation(fields: [projetoId], references: [id])
  projetoId        Int
  alunos           AtividadeAluno[]
}

model AtividadeAluno {
  id          Int       @id @default(autoincrement())
  atividade   Atividade @relation(fields: [atividadeId], references: [id])
  atividadeId Int
  aluno       Aluno     @relation(fields: [alunoId], references: [id])
  alunoId     Int
  status      StatusAtividade @default(PENDENTE)
}
