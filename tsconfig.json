{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "server/dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "./**/*.ts",
    "src/tests/projectRoutesTests.spec"
  ],
  "exclude": [
    "server/dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}